set $mod Mod1
set $win Mod4
set $lock swaylock --clock --fade-in 1 --screenshots --effect-blur 7x5 --indicator


input * {
    xkb_layout "de"
}

floating_modifier $mod

bindsym $mod+Return exec alacritty
bindsym $mod+q kill
bindsym $mod+p exec "GDK_BACKEND=wayland ulauncher"
bindsym Print exec "grimshot save area - | swappy -f -"
bindsym $mod+Shift+p exec "nwggrid"
bindsym $win+p exec "nwgbar -o 0.5 -t ~/.config/nwg-launchers/nwgbar/screen.json"
bindsym $win+Shift+p exec "~/.config/sway/duplicateDisplay.sh"
bindsym $mod+b exec firefox

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Control+h split h
bindsym $mod+Control+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+space floating toggle

bindsym $mod+1 workspace number "1"
bindsym $mod+2 workspace number "2"
bindsym $mod+3 workspace number "3"
bindsym $mod+4 workspace number "4"
bindsym $mod+5 workspace number "5"
bindsym $mod+6 workspace number "6"
bindsym $mod+7 workspace number "7"
bindsym $mod+8 workspace number "8"
bindsym $mod+9 workspace number "9"
bindsym $mod+0 workspace number "10"

bindsym $mod+Shift+1 move container to workspace number "1"
bindsym $mod+Shift+2 move container to workspace number "2"
bindsym $mod+Shift+3 move container to workspace number "3"
bindsym $mod+Shift+4 move container to workspace number "4"
bindsym $mod+Shift+5 move container to workspace number "5"
bindsym $mod+Shift+6 move container to workspace number "6"
bindsym $mod+Shift+7 move container to workspace number "7"
bindsym $mod+Shift+8 move container to workspace number "8"
bindsym $mod+Shift+9 move container to workspace number "9"
bindsym $mod+Shift+0 move container to workspace number "10"

bindsym $mod+Shift+r reload
bindsym $mod+Shift+q quit

# Special lock command
bindsym $win+l exec $lock 

# Some configuration for things like adjust brightness
bindsym $mod+plus exec light -A 5
bindsym $mod+minus exec light -U 5

# Automatic execution of some processes
exec_always swaybg -i ~/.config/sway/wall.jpg 
exec_always kanshi
exec_always swayidle -w \
    timeout 10 'if pgrep -x swaylock; then swaymsg "output * dpms off"; fi' \
    timeout 240 'light -G > /tmp/brightness && light -S 10' \ 
    timeout 300 'exec $lock' \
    timeout 900 'exec $lock && systemctl suspend' \
    after-resume 'swaymsg "output * dpms on"' \
    resume 'swaymsg "output * dpms on"' \
    resume 'light -S $([ -f /tmp/brightness ] && cat /tmp/brightness || echo 100%)' \
    before-sleep 'playerctl pause' \
    before-sleep 'exec $lock'
exec wayvnc -o eDP-1


# Dont show title on ulauncher 
for_window [app_id="ulauncher"] floating enable, border none

#Style configuration
font pango:DejaVu Sans Mono 9
default_border pixel
client.focused #d75f5f #212121 #000000 #d75f5f #d75f5f

smart_gaps on
gaps inner 5

bar {
  swaybar_command waybar
}
